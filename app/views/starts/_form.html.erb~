<%= form_for(@start) do |f| %>
  <% if @start.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@start.errors.count, "error") %> prohibited this start from being saved:</h2>

      <ul>
      <% @start.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Nombre %><br>
    <%= f.text_field :Nombre %>
  </div>
  <div class="field">
    <%= f.label :Cuenta %><br>
    <%= f.number_field :Cuenta %>
  </div>
  <div class="field">
    <%= f.label :Telefono %><br>
    <%= f.number_field:Telefono%>
  </div>
  <div class="field">
    <%= f.label :Carrera %><br>
    <%=f.text_field:Carrera %>=>
    <select name="start[run_id]"=>
      <% Run.all.each do |s| %>
        <option value="<%= s.id %>"><%= s.Carreras %></option>
      <% end %>
    </select>
  </div>
  <div class="field">
    <%= f.label :Hora %><br>
    <select name="start[timetable_id]">
      <% Timetable.all.each do |s| %>
        <option value="<%= s.id %>"><%= s.name %></option>
      <% end %>
    </select>
  </div>
  <div class="field">
    <%= f.label :fecha %><br>
    <%= f.date_select :fecha %>
  </div>
<% if userIsCoordinator %>
  <div class="field">
    <%= f.label :Estado %><br>
    <%= f.text_field :Estado %>
  </div>
 <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
